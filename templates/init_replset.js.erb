var rsconf = {
    "_id":"<%= @replSet %>",
    "members": [
        <% @members.each_with_index do |member, index| -%>
        {
            "_id": <%= index %>,
            "host": '<%= member['host'] %>',
            <% if member['arbiterOnly'] -%>
            "arbiterOnly": <%= member['arbiterOnly'] %>
            <% end -%>
        }<%= ',' if index < (@members.size - 1) %>
        <% end -%>
    ]
}

rs.initiate(rsconf);




